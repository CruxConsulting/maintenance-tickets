  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server"
      ]
    },
    {
      "name": "Tests",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "test"
      ]
    },
    {
      "name": "Tests - active test file",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "test",
        "${file}",
      ]
    },
    {
      "name": "Tests - active test only",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "test",
        "${file}:${lineNumber}",
      ]
    },
    {
      "name": "Tests - active test only without spring",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "test",
        "${file}:${lineNumber}",
      ],
      "env": { "DISABLE_SPRING": 1 }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch sowilo dev BO",
      "url": "http://sowilo-maintenance-tickets.lvh.me:3000/admin/login",
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch sowilo prod BO",
      "url": "https://sowilo-maintenance-tickets.herokuapp.com/admin"
    }
  ]
}
